<android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/id_main_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.Toolbar
                android:id="@+id/id_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:fitsSystemWindows="true"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UaMother"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:id="@+id/toolbar_title"/>

            <TextView
                    android:id="@+id/aboutTv"
                    android:layout_gravity="end"
                    android:text="关于我们"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/primary"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginTop="10dp"
                    android:text="舒适度调节"
                    android:layout_marginBottom="10dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <ImageView
                    android:id="@+id/bluetoothIv"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/bluetooth"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <com.uamother.bluetooth.views.SecondOrderBezier
                   android:layout_below="@+id/bluetoothIv"
                    android:layout_width="match_parent"
                    android:background="@color/primary"
                    android:layout_height="160dp"/>

        </RelativeLayout>

        <TextView
                android:layout_marginStart="27dp"
                android:layout_marginTop="12dp"
                android:text="缺省设定"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_marginStart="25dp"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:text="一"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:text="二"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:text="三"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:text="四"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:text="五"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:text="六"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:text="七"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:text="八"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            <TextView
                    android:text="九"
                    android:textColor="@color/black"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
        </LinearLayout>


        <TextView
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:text="吸奶频率"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.uamother.bluetooth.other.DiscreteSeekBar
                android:id="@+id/discrete1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dsb_min="-5"
                app:dsb_max="5"
                app:dsb_value="-2"
                app:dsb_progressColor="#73b5f7"
                app:dsb_rippleColor="#FF73b5f7"
                app:dsb_indicatorColor="#73b5f7"/>

        <TextView
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:text="舒适度"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.uamother.bluetooth.other.DiscreteSeekBar
                android:id="@+id/discrete2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dsb_min="-5"
                app:dsb_max="5"
                app:dsb_value="-2"
                app:dsb_progressColor="#a8d67f"
                app:dsb_rippleColor="#FFa8d67f"
                app:dsb_indicatorColor="#a8d67f"
                />

        <TextView
                android:layout_marginStart="27dp"
                android:layout_marginTop="20dp"
                android:text="亲和力"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <com.uamother.bluetooth.other.DiscreteSeekBar
                android:id="@+id/discrete3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dsb_progressColor="#ea7270"
                app:dsb_rippleColor="#FFea7270"
                app:dsb_indicatorColor="#ea7270"
                />

        <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

        <Button
                android:id="@+id/saveBtn"
                style="@style/common_button_red"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:text="保存"/>
    </LinearLayout>

</android.support.v4.widget.DrawerLayout>

